{
  "ReverseProxy": {
    "Routes": {
      "auth-api-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/auth/api/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/auth" }
        ]
      },
      "course-api-route": {
        "ClusterId": "course-cluster",
        "Match": {
          "Path": "/course/api/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/course" }
        ]
      },

      "auth-swagger-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        }
      },
      "course-swagger-route": {
        "ClusterId": "course-cluster",
        "Match": {
          "Path": "/course/{**catch-all}"
        }
      }
    },

    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth-api": { "Address": "http://fibochat-auth:5001/" }
        }
      },
      "course-cluster": {
        "Destinations": {
          "course-api": { "Address": "http://fibochat-course:5002/" }
        }
      }
    }
  },

  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:8000"
      }
    }
  }
}
