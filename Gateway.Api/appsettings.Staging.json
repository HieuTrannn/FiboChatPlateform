{
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/auth" }
        ]
      },
      "course-route": {
        "ClusterId": "course-cluster",
        "Match": {
          "Path": "/course/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/course" }
        ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth-api": {
            "Address": "http://fibochat-auth:5001"
          }
        }
      },
      "course-cluster": {
        "Destinations": {
          "course-api": {
            "Address": "http://fibochat-course:5002"
          }
        }
      }
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:8000"
      }
    }
  }
}
