{
  "ReverseProxy": {
    "Routes": {
      "auth-api-route": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/auth/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/auth" }
        ]
      },
      "course-api-route": {
        "ClusterId": "course-cluster",
        "Match": { "Path": "/course/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/course" }
        ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth-api": { "Address": "http://authentication:5001/" }
        }
      },
      "course-cluster": {
        "Destinations": {
          "course-api": { "Address": "http://course-api:5002/" }
        }
      }
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": { "Url": "http://0.0.0.0:8000" }
    }
  }
}
