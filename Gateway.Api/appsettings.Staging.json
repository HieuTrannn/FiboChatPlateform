{
  "ReverseProxy": {
    "Routes": {
      "authRoute": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/auth" }
        ]
      },
      "userRoute": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/user/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/user" }
        ]
      }
    },
    "Clusters": {
      "authCluster": {
        "Destinations": {
          "authDestination": { "Address": "http://fibochat-auth:8080/" }
        }
      },
      "userCluster": {
        "Destinations": {
          "userDestination": { "Address": "http://fibochat-course:8080/" }
        }
      }
    }
  }
}
