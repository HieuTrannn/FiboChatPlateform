{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "authRoute": {
        "ClusterId": "authCluster",
        "Match": { "Path": "/auth/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/auth" } ]
      },
      "courseRoute": {
        "ClusterId": "courseCluster",
        "Match": { "Path": "/course/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/course" } ]
      }
    },
    "Clusters": {
      "authCluster": {
        "Destinations": {
          "authDestination": { "Address": "https://localhost:5001/" }
        }
      },
      "courseCluster": {
        "Destinations": {
          "courseDestination": { "Address": "https://localhost:5002/" }
        }
      }
    }
  }
}
