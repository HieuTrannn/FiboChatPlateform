{
  "ReverseProxy": {
    "Routes": {
      "authentication-route": {
        "ClusterId": "authentication-cluster",
        "Match": {
          "Path": "/auth/api/{**catch-all}"
        },
        "Transforms": [{ "PathRemovePrefix": "/auth" }]
      },
      "course-route": {
        "ClusterId": "course-cluster",
        "Match": {
          "Path": "/course/api/{**catch-all}"
        },
        "Transforms": [{ "PathRemovePrefix": "/course" }]
      }
    },
    "Clusters": {
      "authentication-cluster": {
        "Destinations": {
          "auth-api": {
            "Address": "https://localhost:5001"
          }
        }
      },
      "course-cluster": {
        "Destinations": {
          "course-api": {
            "Address": "https://localhost:7212"
          }
        }
      }
    }
  }
}