{
  "ReverseProxy": {
    "Routes": {
      "authentication-route": {
        "ClusterId": "authentication-cluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [{ "PathRemovePrefix": "/auth" }]
      },
      "course-route": {
        "ClusterId": "course-cluster",
        "Match": {
          "Path": "/course/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/course" }
        ]
      }
    },
    "Clusters": {
      "authentication-cluster": {
        "Destinations": {
          "auth-api": {
            "Address": "http://localhost:5001"
          }
        }
      },
      "course-cluster": {
        "Destinations": {
          "course-api": {
            "Address": "http://localhost:5002"
          }
        }
      },
      "courseCluster": {
        "Destinations": {
          "courseDestination": { "Address": "https://localhost:7212/" }
        }
      }
    }
  }
}
