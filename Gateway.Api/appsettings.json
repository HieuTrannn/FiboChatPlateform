{
  "ReverseProxy": {
    "Routes": {
      "authentication-route": {
        "ClusterId": "authentication-cluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [{ "PathRemovePrefix": "/auth" }]
      },
      "course-route": {
        "ClusterId": "course-cluster",
        "Match": {
          "Path": "/course/{**catch-all}"
        },
        "Transforms": [{ "PathRemovePrefix": "/course" }]
      },
      "lecturer-route": {
        "ClusterId": "authentication-cluster",
        "Match": {
          "Path": "/api/lecturers/{**catch-all}"
        }
      },
      "semester-route": {
        "ClusterId": "authentication-cluster",
        "Match": {
          "Path": "/api/semesters/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "authentication-cluster": {
        "Destinations": {
          "auth-api": {
            "Address": "http://localhost:5001"
          }
        }
      },
      "course-cluster": {
        "Destinations": {
          "course-api": {
            "Address": "http://localhost:5002"
          }
        }
      }
    }
  }
}
