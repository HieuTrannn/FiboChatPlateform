{
  "ReverseProxy": {
    "Routes": {
      "authentication-route": {
        "ClusterId": "authentication-cluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/auth" }
        ]
      },
      "course-route": {
        "ClusterId": "course-cluster",
        "Match": {
          "Path": "/course/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/course" }
        ]
      }
    },
    "Clusters": {
      "authentication-cluster": {
        "Destinations": {
          "auth-api": {
            "Address": "http://authentication:5001"
          }
        }
      },
      "course-cluster": {
        "Destinations": {
          "course-api": {
            "Address": "http://course-api:5002"
          }
        }
      }
    }
  }
}
