{
  "ReverseProxy": {
    "Routes": {
      "authRoute": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [{ "PathRemovePrefix": "/auth" }]
      },
      "userRoute": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/user/{**catch-all}"
        },
        "Transforms": [{ "PathRemovePrrefix": "/user" }]
      },
      "courseRoute": {
        "ClusterId": "courseCluster",
        "Match": {
          "Path": "/course/{**catch-all}"
        },
        "Transforms": [{ "PathRemovePrefix": "/course" }]
      }
    },
    "Clusters": {
      "authCluster": {
        "Destinations": {
          "authDestination": { "Address": "https://localhost:5001/" }
        }
      },
      "userCluster": {
        "Destinations": {
          "userDestination": { "Address": "https://localhost:7223/" }
        }
      },
      "courseCluster": {
        "Destinations": {
          "courseDestination": { "Address": "https://localhost:7212/" }
        }
      }
    }
  }
}
